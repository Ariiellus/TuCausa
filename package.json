{
  "name": "tucausa",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "front",
    "foundry"
  ],
  "scripts": {
    "dev": "cd front && npm run dev",
    "build": "cd front && npm run build",
    "start": "cd front && npm run start",
    "lint": "cd front && npm run lint",
    "test": "cd foundry && forge test",
    "deploy": "cd foundry && forge script script/Deploy.s.sol --rpc-url $SEPOLIA_RPC_URL --broadcast --verify --etherscan-api-key $ETHERSCAN_API_KEY --private-key $PRIVATE_KEY"
  },
  "devDependencies": {
    "@types/node": "^22"
  },
  "dependencies": {
    "@filoz/synapse-sdk": "^0.23.2",
    "@openzeppelin/contracts": "^5.4.0",
    "ethers": "^6.15.0"
  }
}
